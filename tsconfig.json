{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "/dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "paths": {
    "@shared/*": ["./src/shared*"]
  },
  "include": ["src/**/*", "src/app/types/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
