{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "/dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    //    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/app/types/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
